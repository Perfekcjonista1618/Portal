<!DOCTYPE html>
<html>
<head>
    @{
        ViewData["Title"] = "Index";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    <style>
        /* Set the size of the div element that contains the map */
        #map {
            height: 400px; /* The height is 400 pixels */
            width: 100%; /* The width is the width of the web page */
        }
    </style>
</head>
<body>
    <h3>My Google Maps Demo</h3>
    <!--The div element for the map -->
    <div id="map"></div>
    <script>
        // Initialize and add the map
        function initMap() {
            // The location of ATH
            var ATH = { lat: 49.784564, lng: 19.056980 };
            // The map, centered at ATH
            var map = new google.maps.Map(
                document.getElementById('map'), { zoom: 16, center: ATH });
            // The marker, positioned at ATH
            var marker = new google.maps.Marker({ position: ATH, map: map });
        }
    </script>
    <script async defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCCcjp8suoMQ8oSzr9bP9CbdTvfopGJR4s&callback=initMap">
    </script>
</body>
</html>
